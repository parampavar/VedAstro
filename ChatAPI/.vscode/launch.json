    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app", // replace with your FastAPI application instance
                "--reload"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}/src", // replace 'your_folder' with your specific folder
            "preLaunchTask": "Install Requirements",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}